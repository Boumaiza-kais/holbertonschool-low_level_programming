#include "holberton.h"
/**
 * get_bit - function to get bit at index
 * @n: unsigned long int type
 * @index: unsigned int type
 * Return: always successful
 */

int get_bit(unsigned long int n, unsigned int index)
{
unsigned int size;
size = sizeof(n) * 8 - 1;
if (index > size)
return (-1);
return (n << (size - index) >> size);
}
